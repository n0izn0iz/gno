-- setup_auth.gno --
package main

import (
    "std"
    "time"

    "gno.land/r/demo/authreg"
    "gno.land/p/demo/auth"
)

func main() {
    sessions := auth.Resolve("/u/alice_42/sess", authreg.Resolve).(auth.SessionsAdm)
    sessions.Create("/u/alice_42", "alice-iphone", auth.PrevRealms(std.Address("g1gvcsfj492u6cpxudrprzz23ulmppxgv9pqmnpj")), time.Now().Add(time.Hour))
}

-- teardown_auth.gno --
package main

import (
    "gno.land/r/demo/authreg"
    "gno.land/p/demo/auth"
)

func main() {
    sessions := auth.Resolve("/u/alice_42/sess", authreg.Resolve).(auth.SessionsAdm)
    sessions.Drop("alice-iphone")
}