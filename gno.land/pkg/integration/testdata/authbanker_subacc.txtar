-- send_to_bob_cashier.gno --
package main

import (
    "gno.land/r/demo/subacc"
    "gno.land/r/demo/userauth"
    "gno.land/r/demo/callerauth"
    "gno.land/r/demo/authbanker"
)

func main() {
    autok := subacc.AuthToken(userauth.AuthToken(callerauth.AuthToken(), "alice_42"), "savings")
    authbanker.SendCoins(autok, "/s/u/bob_42/cashier", 14)
}


