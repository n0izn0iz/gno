## start a new node
gnoland start


# register alice
gnokey maketx call alice -send 20000000ugnot -pkgpath gno.land/r/demo/users -func Register -args "" -args "alice_42" -args ""  -gas-fee 1000000ugnot -gas-wanted 15000000 -broadcast -chainid=tendermint_test

# register bob
gnokey maketx call bob -send 20000000ugnot -pkgpath gno.land/r/demo/users -func Register -args "" -args "bob_42" -args ""  -gas-fee 1000000ugnot -gas-wanted 15000000 -broadcast -chainid=tendermint_test


# fund alice's 'savings' sub-account
gnokey maketx call alice -send 42ugnot -pkgpath gno.land/r/demo/authbanker -func FundVault -args "/s/u/alice_42/savings"  -gas-fee 1000000ugnot -gas-wanted 15000000 -broadcast -chainid=tendermint_test

# check alice account
gnokey maketx call -pkgpath gno.land/r/demo/authbanker -func "GetCoins" -args "/s/u/alice_42/savings" -gas-fee 1000000ugnot -gas-wanted 2000000 -broadcast -chainid=tendermint_test test1
stdout '42'


# send from alice's 'savings' sub-account to bob's 'cashier' sub-account
gnokey maketx run alice $WORK/send_to_bob_cashier.gno -gas-fee 1000000ugnot -gas-wanted 25000000 -broadcast -chainid=tendermint_test

